{{#if success_msg}}

  <div
    class="bg-green-400 border border-green-600 fixed w-3/4 float-right top-0 max-w-md lg:max-w-2xl mt-20 text-center rounded-md"
  >
    <div
      id="close_msg_button"
      class="bg-red-500 w-3 h-3 rounded-full hover:bg-red-700 cursor-pointer float-right m-1"
    >
    </div>
    <h1 class="m-4 text-green-800">{{success_msg}}</h1>
  </div>

{{else}}
{{/if}}

{{#if error_msg}}

  <div
    class="bg-red-400 border border-red-600 fixed w-3/4 float-right top-0 max-w-md lg:max-w-2xl mt-20 text-center rounded-md"
  >
    <div
      id="close_msg_button"
      class="bg-red-700 w-3 h-3 rounded-full hover:bg-red-900 cursor-pointer float-right m-1"
    >
    </div>
    <h1 class="m-4 text-red-800">{{error_msg}}</h1>
  </div>
{{else}}
{{/if}}